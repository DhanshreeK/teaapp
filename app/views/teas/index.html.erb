<p id="notice"><%= notice %></p>

<h1>Teas</h1>

  <table class="table table-striped">
  <thead>
    <tr>
      <th>Date</th>
      <th>Morning qty</th>
      <th>Evening qty</th>
      <th>Total qty</th>
      <!-- <th>Final total</th>
      <th>Price</th>
      <th>Total price</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teas.each do |tea| %>
      <tr>
        <td><%= tea.date %></td>
        <td><%= tea.morning_qty %></td>
        <td><%= tea.evening_qty %></td>
        <td><%= tea.total_qty %></td>
       <!--  <td><%#= tea.final_total %></td>
        <td><%#= tea.price %></td>
        <td><%#= tea.total_price %></td> -->
        <td><%= link_to 'Show', tea, class: 'btn btn-info btn-sm' %></td>
        <td><%= link_to 'Edit', edit_tea_path(tea) , class: 'btn btn-default btn-sm' %></td>
        <td><%= link_to 'Destroy', tea, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tea', new_tea_path, class: 'btn btn-warning' %>
